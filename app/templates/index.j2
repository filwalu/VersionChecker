<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test JSON Table</title>
    <link rel= "stylesheet" type= "text/css" href= "{{ url_for('static',filename='styles/style.css') }}"/>
</head>
<body>
    <nav>
        <div class="nav-buttons">
            <h2>Welcome to the Test JSON Table App!</h2>
            <p>Choose a host:</p>

            {% for host_file in hosts_files %}
                <form action="/index" method="get">
                    <input type="hidden" name="host" value="{{ host_file }}">
                    <button type="submit">{{ host_file }}</button>
                </form>
            {% endfor %}
        </div>
    </nav>
    <header>
        <h1>Test JSON Table</h1>
    </header>
    <main>
        {% if data %}
            <table border="1">
                <thead>
                    <tr>
                        <th>Service</th>
                        <th>Version</th>
                    </tr>
                </thead>
                <tbody>
                    {% for service, version in data.items() %}
                        <tr>
                            <td>{{ service }}</td>
                            <td>{{ version }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>No info about host</p>
        {% endif %}
    </main>
</body>
</html>
